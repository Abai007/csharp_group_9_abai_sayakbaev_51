@model List<Phone>


@{

    ViewBag.Title = "Мобильные телефоны";

    Layout = "_Layout";

}


<h2>Мобильные телефоны</h2>

<a asp-action="Add" asp-controller="Phones">Добавить смартфон</a>

<div class="table_section">

    @if (@Model.Count == 0)

    {

        <p>Смартфоны еще не добавлены</p>

    }

    else

    {

        <table style="width: 100%;">

            <tr>

                <th>Id</th>

                <th>Наименование</th>

                <th>Компания</th>

                <th>Стоимость</th>

                <th>Заказать</th>

                <th>Изменить</th>

                <th>Характеристики (pdf)</th>

                <th>Сайт производителя</th>

            </tr>

            @foreach (var phone in @Model)

            {

        <tr>

            <td>@phone.Id</td>

            <td>@phone.Name</td>

            <td>@phone.Company</td>

            <td>@phone.Price</td>

            <td>

                <a asp-action="Create" asp-controller="Orders" asp-route-phoneId="@phone.Id">Заказать</a>

            </td>
            <td>

                <a asp-action="EditingPhone" asp-controller="Phones" asp-route-Id="@phone.Id">Редактировать</a>

            </td>
            <td>

                <a asp-action="DownloadFile" asp-controller="Phones" asp-route-Id="@phone.Id">Скачать</a>

            </td>
            <td>

                <a asp-action="InfoBrend" asp-controller="Phones" asp-route-Id="@phone.Id">Перейти</a>

            </td>

        </tr>

            }



        </table>

    }

</div>
