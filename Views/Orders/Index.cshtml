@model List<Order>


@{

    ViewBag.Title = "Заказы";

    Layout = "_Layout";

}


<h2>Заказы</h2>

<div class="table_section">

    @if (@Model.Count == 0)

    {

        <p>Смартфоны еще не добавлены</p>

    }

    else

    {

        <table style="width: 100%;">

            <tr>

                <th>Id</th>

                <th>Наименование</th>

                <th>Компания</th>

                <th>Стоимость</th>

            </tr>

            @foreach (var phone in @Model)

            {

                <tr>

                    <td>@phone.Id</td>

                    <td>@phone.Name</td>

                    <td>@phone.Address</td>

                    <td>@phone.ContactPhone</td>

                </tr>

            }



        </table>

    }
</div>


